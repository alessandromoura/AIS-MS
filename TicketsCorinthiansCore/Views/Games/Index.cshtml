@model IEnumerable<TicketsCorinthiansCore.Entities.GameEntity>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamHome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamAway)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stadium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Championship)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamHome.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamAway.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stadium.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Championship.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
